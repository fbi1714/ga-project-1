<% @page_title = "All Orders" %>
<div>
<p><%= @page_title %></p>
<table>
    <tr>
      <th>id</th>
      <th>Description</th>
      <th>Order Number</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th>Actions</th>
    </tr>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.id %></td>
      <td><%= order.description %></td>
      <td><%= order.order_number %></td>
      <td><%= order.created_at.strftime("%d/%m/%Y : %X")  %></td>
      <td><%= order.updated_at.strftime("%d/%m/%Y : %X")  %></td>
      <td>
        <%= link_to( "New", new_order_path( order.id )) %>
        <%= link_to( "Show", order_path( order.id ), :method => :show ) %>
        <%= link_to( "Edit", edit_order_path( order.id )) %>
        <%= link_to( "Delete", order_path( order.id ), :method => :delete ) %>
      </td>
    </tr>
    <% end %>
</table>
</div>
