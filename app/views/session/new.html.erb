<div class="container" id="forma">
<h2 class="title">Login</h2>

<% if flash[:success] %>
  <p class="login-msg"><%= flash[:success] %></p>
<% end %>

<% if flash[:error] %>
  <p><%= flash[:error] %></p>
<% end %>

<%= form_tag login_path do  %>
  <p>
    <%= label_tag :email %>
    <%= email_field_tag :email %>
  </p>
  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </p>

  <%= submit_tag "Login", class: 'waves-effect blue-grey lighten-3 btn', id:"centro" %>
<% end %>
</div>
