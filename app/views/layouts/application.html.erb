<!DOCTYPE html>
<html>
<head>
  <title>Login</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


  <nav>
    <%= link_to "All uses", users_path %>
    <% if @current_user %>
    <%= link_to "View Profile", @current_user %>
    <%= link_to "Edit Profile", edit_user_path( @current_user ) %>
    <%= link_to "Delete account", user_path( @current_user ), :method => :delete %>
    <%= link_to "Logout", logout_path( @current_user ), :method => :delete %>
    <%= link_to "Create an account", new_user_path%>
    <%= link_to "Login", login_path %>
    <% end %>
  </nav>
  <!--
    "Show all users" - All the time
    "View a profile" - If I am logged in
    "Edit a user" -  If I am logged in
    "Delete an account" - If I am logged in
    "Logout" - If I am logged in

    "Create an account" - If I am not logged in
   -->


  <% if @current_user %>
      <p>Your email is <%= @current_user.email %></p>
  <% end %>

  <% if flash[:success] %>
    <p><%= flash[:success] %></p>
  <% end %>

  <% if flash[:error] %>
    <p><%= flash[:error] %></p>
  <% end %>

<%= yield %>

</body>
</html>
